<div ng-app='LTI_GOOGLE_DOCS'>
    <div class="container"  ng-controller='MainCtrl'>
        <!-- begin editable content -->
        
        <div class="header">
        	<ul class="nav nav-pills pull-right">
        		<li><button type="button" class="btn btn-primary" btn-checkbox btn-checkbox-true="1" btn-checkbox-false="0" ng-model="authorized" ng-disabled="button_disabled" ng-click="clicky()">
                    {{authorization_status}}
                </button></li>
        	</ul>
        	<h3 class="text-muted"> Google Doc LTI Tool</h3>
        	<hr>
        </div>

        <div class="jumbotron">
			<h1>Google Doc LTI Tool 
                
            </h1>
			<span class="lead">Top 5 Files from Drive: </span>

            <accordion>
                <accordion-group ng-repeat="item in items" heading={{item.title}}>
                    {{item.title}}
                    asdf
                </accordion-group>
            </accordion>
        </div>
        
        <div class="footer">
        	<hr>
